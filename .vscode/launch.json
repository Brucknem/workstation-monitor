    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (simplest configuration)",
            "program": "${file}",
            "args": ["logs", "test"]
        },
        {
            "name": "Python: python/tests/load_logs_test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/python/tests/load_logs_test.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bazel-bin/python/tests/load_logs_test.runfiles/:${workspaceFolder}/bazel-bin/python/tests/load_logs_test.runfiles/python/:"
            }
        },
        {
            "name": "Python: tests/frontend/ui_tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/frontend/ui_tests.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bazel-bin/tests/frontend/ui_tests.runfiles/:${workspaceFolder}/bazel-bin/tests/frontend/ui_tests.runfiles/python/:"
            }
        },   
        {
            "name": "Python: tests/backend/hardware_query_tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/backend/hardware_query_tests.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bazel-bin/tests/backend/hardware_query_tests.runfiles/:${workspaceFolder}/bazel-bin/tests/backend/hardware_query_tests.runfiles/python/:"
            }
        },    
        {
            "name": "Python: src/backend/monitor",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/backend/monitor.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bazel-bin/src/backend/monitor.runfiles/:${workspaceFolder}/bazel-bin/src/backend/monitor.runfiles/python/:"
            }
        },
    ]
}